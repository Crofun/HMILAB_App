<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:text="Edit sending parameters:"
        android:textSize="25sp"
        />

    <!-- 频率 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="frequency: f = "
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edit_f_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:textSize="12sp"
            android:singleLine="true"
            />

        <Spinner
            android:id="@+id/edit_f_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_gravity="center"
            android:entries="@array/unit_f"
            android:spinnerMode="dialog"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/edit_f_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:checked="false"
            />

    </LinearLayout>


    <!-- 周期 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="cycle: T = "
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edit_t_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:textSize="16sp"
            android:singleLine="true"
            />

        <Spinner
            android:id="@+id/edit_t_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_gravity="center"
            android:entries="@array/unit_t"
            android:spinnerMode="dialog"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/edit_t_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:checked="false"
            />

    </LinearLayout>

    <!-- 峰值 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="Maximum: max = "
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edit_max_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:textSize="16sp"
            android:singleLine="true"
            />

        <Spinner
            android:id="@+id/edit_max_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_gravity="center"
            android:entries="@array/unit_ex"
            android:spinnerMode="dialog"
            />

    </LinearLayout>

    <!-- 谷值 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="Minimum : min = "
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edit_min_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:textSize="16sp"
            android:singleLine="true"
            />

        <Spinner
            android:id="@+id/edit_min_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_gravity="center"
            android:entries="@array/unit_ex"
            android:spinnerMode="dialog"
            />

    </LinearLayout>

    <!-- 峰值截止时间cc0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="cc0 = "
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edit_cc0_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:textSize="16sp"
            android:text="10.0"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/edit_cc0_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_marginStart="40dp"
            android:text="%"
            android:textSize="16sp"
            />

        <SeekBar
            android:id="@+id/edit_cc0_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="100"
            />

    </LinearLayout>

    <!-- 谷值起始时间cc1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="cc1 = "
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edit_cc1_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:textSize="16sp"
            android:text="20.0"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/edit_cc1_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_marginStart="40dp"
            android:text="%"
            android:textSize="16sp"
            />

        <SeekBar
            android:id="@+id/edit_cc1_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="200"
            />

    </LinearLayout>

    <!-- 谷值截止时间cc2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="cc2 = "
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edit_cc2_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:textSize="16sp"
            android:text="30.0"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/edit_cc2_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_marginStart="40dp"
            android:text="%"
            android:textSize="16sp"
            />

        <SeekBar
            android:id="@+id/edit_cc2_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="300"
            />

    </LinearLayout>


    <!-- 预览图 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:text="Signal waveform preview:"
        android:textSize="25sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/edit_preview_img"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_weight="8"
            android:src="@mipmap/close"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>