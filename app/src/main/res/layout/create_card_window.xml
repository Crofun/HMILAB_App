<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/creat_card_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            />

        <LinearLayout
            android:id="@+id/creat_card_window"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="16"
            android:background="@color/ZanBlur"
            android:orientation="vertical"
            >

            <!-- 标题描述 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="41dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/edit_window_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Create a SaveCard"
                        android:textSize="20px"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ZanDeeperBlur"
                    />

            </LinearLayout>

            <!-- 输入标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="41dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:text="Card title:"
                        android:textSize="16sp"
                        />

                    <EditText
                        android:id="@+id/edit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="14sp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ZanDeeperBlur"
                    />

            </LinearLayout>

            <!-- 单选输入通道编号 -->
            <LinearLayout
                android:id="@+id/edit_singleselect_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Choose one channel:"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/edit_mo_choose_recview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:scrollbars="none"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ZanDeeperBlur"
                    />

            </LinearLayout>

            <!-- 多选输入通道编号 -->
            <LinearLayout
                android:id="@+id/edit_multiselect_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Choose channel(s) to save:"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/edit_sa_choose_all"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:text="全选"
                        android:textSize="14sp"
                        />

                    <Button
                        android:id="@+id/edit_sa_choose_none"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:text="全不选"
                        android:textSize="14sp"
                        />

                    <Button
                        android:id="@+id/edit_sa_choose_invert"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:text="反选"
                        android:textSize="14sp"
                        />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/edit_sa_choose_recview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ZanDeeperBlur"
                    />

            </LinearLayout>

            <!-- 如果是SendCard模式，在这里设置信号各个参数 -->
            <include
                android:id="@+id/edit_parameter_layout"
                layout="@layout/create_card_parameter"
                android:visibility="gone"
                />

            <!-- 适当的间隔 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />

            <!-- 两个按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    >

                    <Button
                        android:id="@+id/edit_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Submit"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        />

                    <Button
                        android:id="@+id/edit_close"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Close"
                        android:textSize="16sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

</LinearLayout>