<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_device_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_weight="3"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="14"
        android:orientation="horizontal"
        >

        <View
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_weight="3"
            />

        <LinearLayout
            android:id="@+id/new_device_main"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:minWidth="500dp"
            android:background="@drawable/shape_corner_corner"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_top"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="请选择蓝牙设备"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/new_device_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:id="@+id/new_device_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_bottom"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="取消"
                    android:textColor="@color/ZanDark"
                    android:textSize="30sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_weight="3"
            />

    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_weight="3"
        />

</LinearLayout>